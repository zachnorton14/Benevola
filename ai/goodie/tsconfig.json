{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // set to false to allow CommonJS module syntax:
    "verbatimModuleSyntax": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "lib": ["es2022"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}